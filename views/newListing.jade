extends layout

block content
  div.header(style="background:rgb(81,192,102);")
    a(href="/")
      img.barLogo(src="/images/shareServeBigWhite.png")
    div(style="margin-right:auto;margin-left:12px;")
      div(style="font-size:45px;") ShareServe 
      div(style="font-size:30px;font-style:italic;") A Community-Based Server Marketplace
    a.userContainer(href="/user/dashboard/" style="text-decoration:none;color:white;")
      div(style="font-size:25px;") jpwall
      img(src="/images/downArrow.png" style="width:40px;height:40px")
  //div(style="margin-left:auto;margin-right:auto;margin-top:20px;width:70%;")
    //div.homeTitleText New Listing
  div.progressBar
    div.progressStep.homeInfoText(style="background:rgb(186,109,255)") Step 1: Home Server
    div.progressStep.homeInfoText(style="background:rgb(186,109,255)") Step 2: Customize Server Information
    div.progressStep.homeInfoText Step 3: Availability
  form.newListingItemContainer
    div.newListingItem
      div.homeTitleText#newListingText(style="margin-bottom:0px;") CPU 
      div.newListingFormInline(style="margin-left:auto;")
        input.countInput(type="number" min="1" step="1" placeholder="Core Count")
        input.countInput(type="number" min="0" step="0.01" placeholder="Freq. (GHZ)")
    div.newListingItem.topBorder
      div.homeTitleText#newListingText(style="margin-bottom:0px;") Hard Drive
    div.newListingItem.topBorder.bottomBorder
      div.homeTitleText#newListingText(style="margin-bottom:0px;") RAM
    a.listingButton(href="/newServer2" style="color:white;margin-top:8px;margin-bottom:10px;background:#7b9bd9;text-decoration:none;") Next